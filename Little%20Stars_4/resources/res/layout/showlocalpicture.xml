<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:android_custom="http://schemas.android.com/apk/res-auto" xmlns:ptr="http://schemas.android.com/apk/res/com.jxl.app.littlestars.project" android:orientation="vertical" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <object.p2pipcam.customComponent.MyGallery android:id="@+id/showlocalpic_gallery" android:layout_width="match_parent" android:layout_height="match_parent" android:spacing="10dp"/>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/top" android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="@dimen/y40" android:textColor="@color/color_black" android:gravity="center_vertical" android:id="@+id/back" android:layout_width="@dimen/y160" android:layout_height="@dimen/y80" android:layout_marginLeft="@dimen/x20" android:text="@string/camera_play_return_text" android:layout_centerVertical="true" android:onClick="onClick"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/color_black" android:layout_gravity="center_vertical" android:id="@+id/takepic_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/setting" android:shadowColor="@color/color_shadow" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:layout_centerInParent="true"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/color_white" android:layout_gravity="center_vertical" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/setting" android:shadowColor="@color/color_shadow" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView android:layout_gravity="right" android:id="@+id/btnUpload" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="56dp" android:layout_marginRight="@dimen/x10" android:src="@drawable/upload" android:layout_centerVertical="true" android:onClick="onClick"/>
    <RelativeLayout android:gravity="center_vertical" android:layout_gravity="bottom" android:id="@+id/bottom" android:background="#00000000" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="50dp">
        <TextView android:textSize="18sp" android:textColor="@color/color_white" android:layout_gravity="center_vertical" android:id="@+id/takepic_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="date" android:layout_centerVertical="true"/>
        <TextView android:textSize="18sp" android:textColor="@color/color_white" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/takepic_time" android:padding="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_centerInParent="true"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/color_white" android:layout_gravity="center_vertical" android:id="@+id/picdesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="sum" android:shadowColor="@color/color_shadow" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="24sp" android:textColor="@color/color_white" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/localpic_tv_nopic" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/localpic_no"/>
</FrameLayout>
