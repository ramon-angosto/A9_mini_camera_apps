        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textColor="@color/color_blue" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="100dp" android:minWidth="45dp" android:text="@string/video_file_size"/>
