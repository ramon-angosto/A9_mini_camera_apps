<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:android_custom="http://schemas.android.com/apk/res-auto" xmlns:ptr="http://schemas.android.com/apk/res/com.jxl.app.littlestars.project" android:orientation="vertical" android:background="@drawable/listitem1_pressed_selector" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/frame" android:visibility="gone" android:layout_width="78dp" android:layout_height="60dp" android:layout_marginRight="5dp" android:layout_centerVertical="true">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true"/>
        <ImageView android:layout_gravity="center" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/progressBar1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="@dimen/x150" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/frame" android:layout_centerVertical="true">
        <TextView android:textSize="18sp" android:textColor="@color/color_black" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_blue" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_below="@+id/tv_name"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_name">
            <TextView android:textSize="12sp" android:textColor="@color/color_less_black" android:id="@+id/tv_did" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_black" android:id="@+id/tv_pic_num" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_below="@+id/tv_name"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
