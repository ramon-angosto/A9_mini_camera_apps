<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout1" android:background="@color/color_all_bg" android:layout_width="match_parent" android:layout_height="80dp">
            <TextView android:textSize="28dp" android:textColor="#ffffff" android:id="@+id/tv_doorbell_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:text="TEST"/>
            <LinearLayout android:gravity="bottom|right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView android:textSize="18dp" android:textColor="#ffffff" android:id="@+id/tv_doorbell_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="5dp" android:text="door"/>
                <TextView android:textSize="18dp" android:textColor="#ffffff" android:gravity="right" android:id="@+id/tv_doorbell_call_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_marginBottom="5dp" android:text="00:00"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="top|center_vertical|center_horizontal|center" android:id="@+id/frameLayout" android:background="#ff129ae3" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/imageView" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/vidicon" android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/linearLayout3" android:background="#00000000" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageButton android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:id="@+id/btn_doorbell_ok" android:background="@drawable/doorbell_no" android:layout_width="75dp" android:layout_height="75dp" android:layout_marginBottom="100dp"/>
        <ImageView android:id="@+id/getup_arrow" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_toRightOf="@+id/btn_doorbell_ok"/>
        <ImageView android:id="@+id/getup_arrow1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_toRightOf="@+id/getup_arrow"/>
        <ImageButton android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:id="@+id/btn_doorbell_no" android:background="@drawable/doorbell_ok" android:layout_width="75dp" android:layout_height="75dp" android:layout_marginRight="100dp" android:layout_marginBottom="100dp" android:layout_toRightOf="@+id/getup_arrow1"/>
    </RelativeLayout>
</FrameLayout>
