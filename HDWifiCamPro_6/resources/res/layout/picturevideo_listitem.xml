<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/cameralistrootview" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="wrap_content">
    <View android:background="#40ffffff" android:layout_width="match_parent" android:layout_height="0.01dp" android:layout_alignParentTop="true"/>
    <FrameLayout android:id="@+id/frame" android:visibility="gone" android:layout_width="70dp" android:layout_height="60dp" android:layout_marginRight="5dp" android:layout_centerVertical="true">
        <ImageView android:id="@+id/pic" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true"/>
        <ImageView android:layout_gravity="center" android:id="@+id/video_flag" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/progressBar1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </FrameLayout>
    <com.shix.shixipc.view.RoundAngleImageView android:id="@+id/imgSnapshot" android:layout_width="80dp" android:layout_height="60dp" android:layout_margin="@dimen/list_img_padding_left_dp" android:scaleType="fitXY" android:layout_alignParentLeft="true" android:layout_centerVertical="true" app:roundHeight1="3dp" app:roundWidth1="3dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/imgSnapshot" android:layout_centerVertical="true">
        <TextView android:textSize="18sp" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView"/>
        <TextView android:textSize="12sp" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_below="@+id/tv_name"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_name">
            <TextView android:textSize="12sp" android:id="@+id/tv_did" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView"/>
            <TextView android:textSize="12sp" android:id="@+id/tv_pic_num" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView" android:layout_below="@+id/tv_name"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="18dp" android:src="@drawable/set_btn_right_selector1" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <View android:background="#40ffffff" android:layout_width="match_parent" android:layout_height="0.01dp" android:layout_alignParentBottom="true"/>
</RelativeLayout>
