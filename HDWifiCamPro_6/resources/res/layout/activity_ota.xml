<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/topView" android:background="@mipmap/qh_allbg" android:fitsSystemWindows="true" android:clipToPadding="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center" android:id="@+id/Relative_top" android:layout_width="match_parent" android:layout_height="50dp">
        <Button android:id="@+id/back" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/button_back_style1"/>
        <com.shix.shixipc.view.MyTextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/color_white" android:ellipsize="marquee" android:layout_gravity="center_vertical" android:id="@+id/textview_add_camera" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxWidth="120dp" android:text="OTA" android:scrollHorizontally="true" android:singleLine="true" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:layout_centerInParent="true" android:marqueeRepeatLimit="marquee_forever"/>
        <Button android:id="@+id/done" android:visibility="invisible" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/button_done_style"/>
    </RelativeLayout>
    <TextView android:textSize="12sp" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/tvShowX" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/llSee1" android:paddingLeft="@dimen/n_play_more_margin_left" android:layout_width="match_parent" android:layout_height="@dimen/n_play_more_height" android:layout_marginTop="10dp">
        <TextView android:textSize="12sp" android:textColor="@color/color_black" android:gravity="center" android:id="@+id/tvSee1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="0"/>
        <SeekBar android:id="@+id/seekBar" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:maxHeight="5dp" android:max="100" android:indeterminateOnly="false" android:progressDrawable="@drawable/seekbar" android:minHeight="3dp" android:thumb="@drawable/select_seekbar"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/llSee2" android:paddingLeft="@dimen/n_play_more_margin_left" android:layout_width="match_parent" android:layout_height="@dimen/n_play_more_height" android:layout_marginTop="20dp">
        <TextView android:textSize="12sp" android:textColor="@color/color_black" android:gravity="center" android:id="@+id/tvSee2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="0"/>
        <SeekBar android:id="@+id/seekBar2" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:maxHeight="5dp" android:max="100" android:indeterminateOnly="false" android:progressDrawable="@drawable/seekbar" android:minHeight="3dp" android:thumb="@drawable/select_seekbar"/>
    </LinearLayout>
    <Button android:textSize="14sp" android:textColor="@color/color_white" android:id="@+id/buttonOTAServer" android:background="@drawable/btn_blue_selector" android:paddingLeft="20dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_margin="30dp" android:text="服务器OTA测试"/>
    <Button android:textSize="14sp" android:textColor="@color/color_white" android:id="@+id/buttonOTAP2P" android:background="@drawable/btn_blue_selector" android:paddingLeft="20dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:layout_margin="30dp" android:text="P2P OTA测试"/>
</LinearLayout>
