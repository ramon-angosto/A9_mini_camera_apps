            <ImageView android:id="@+id/tt_open_ad_back_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
            <FrameLayout android:id="@+id/tt_open_ad_video_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/tt_open_ad_image" android:layout_width="match_parent" android:layout_height="match_parent"/>
