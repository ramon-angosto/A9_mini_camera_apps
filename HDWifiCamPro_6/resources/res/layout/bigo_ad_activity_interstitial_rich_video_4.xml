<?xml version="1.0" encoding="utf-8"?>
<sg.bigo.ads.api.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/inter_native_ad_view" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/inter_media_container" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="match_parent">
        <sg.bigo.ads.api.MediaView android:id="@+id/inter_media" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        <Button android:id="@+id/inter_btn_mute" android:background="@drawable/bigo_ad_ic_media_mute" android:visibility="invisible" android:layout_width="28dp" android:layout_height="28dp" android:layout_marginBottom="12dp" android:layout_alignBottom="@+id/inter_media" android:layout_marginEnd="12dp" android:layout_alignEnd="@+id/inter_media"/>
        <TextView android:textSize="12sp" android:textColor="#e9ebec" android:ellipsize="end" android:id="@+id/inter_advertiser" android:background="@drawable/bigo_advertiser_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginBottom="15dp" android:maxWidth="120dp" android:text="bigoad.com" android:maxLines="1" android:layout_alignParentBottom="true" android:layout_marginStart="18dp"/>
        <FrameLayout android:id="@+id/inter_ad_info" android:background="@android:color/white" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <sg.bigo.ads.common.view.RoundedFrameLayout android:layout_gravity="center" android:id="@+id/icon_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp" android:layout_marginStart="12dp" app:radius="6dp">
                    <ImageView android:id="@+id/inter_icon" android:layout_width="80dp" android:layout_height="80dp"/>
                </sg.bigo.ads.common.view.RoundedFrameLayout>
                <TextView android:textSize="15sp" android:textColor="#333333" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/inter_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/bigo_ad_title_default" android:lines="2" android:fontFamily="sans-serif-medium" android:layout_marginStart="12.5dp" android:layout_marginEnd="12dp" android:layout_toEndOf="@+id/icon_layout"/>
                <TextView android:textSize="13sp" android:textColor="#888888" android:ellipsize="end" android:gravity="left" android:id="@+id/inter_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/bigo_ad_description_default" android:lines="2" android:layout_below="@+id/inter_title" android:layout_marginEnd="12dp" android:layout_toEndOf="@+id/icon_layout" android:layout_alignStart="@+id/inter_title"/>
                <Button android:textSize="14sp" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/inter_btn_cta" android:background="@drawable/bigo_ad_button_bg_rectangle_blue" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginBottom="12dp" android:text="@string/bigo_ad_cta_default" android:maxLines="1" android:layout_below="@+id/icon_layout" android:layout_centerHorizontal="true" android:textAllCaps="false" android:layout_marginEnd="12dp" android:layout_alignStart="@+id/icon_layout"/>
                <TextView android:textSize="13sp" android:textColor="#d8d8d8" android:ellipsize="end" android:gravity="center" android:id="@+id/inter_warning" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="" android:maxLines="2" android:layout_below="@+id/inter_btn_cta" android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
            </RelativeLayout>
            <sg.bigo.ads.api.AdOptionsView android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@+id/inter_options" android:layout_width="16dp" android:layout_height="16dp"/>
        </FrameLayout>
        <TextView android:textSize="9sp" android:textColor="#ccffffff" android:gravity="center" android:id="@+id/inter_ad_label" android:background="@drawable/bigo_adtag_background" android:paddingLeft="3dp" android:paddingTop="1dp" android:paddingRight="3dp" android:paddingBottom="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ad"/>
    </RelativeLayout>
</sg.bigo.ads.api.NativeAdView>
