<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:pangle="http://schemas.android.com/apk/com.bytedance.sdk.component" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/tt_ad_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
    <ImageView android:id="@+id/iv_listitem_vertical_image" android:layout_width="135dp" android:layout_height="240dp" android:layout_marginRight="10dp" android:scaleType="centerCrop" android:layout_centerHorizontal="true" android:layout_marginEnd="10dp"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/iv_listitem_vertical_image">
        <TextView android:textSize="14sp" android:gravity="center" android:id="@+id/tv_listitem_ad_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:singleLine="false"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_listitem_icon" android:layout_width="30dp" android:layout_height="40dp" android:layout_marginLeft="10dp" android:layout_centerVertical="true" android:layout_marginStart="10dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/tv_source_desc_layout" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/iv_listitem_icon" android:layout_below="@+id/layout_image_group" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/iv_listitem_icon">
                    <TextView android:textSize="10sp" android:ellipsize="end" android:id="@+id/tv_listitem_ad_desc" android:layout_width="80dp" android:layout_height="20dp" android:singleLine="true"/>
                    <TextView android:textSize="8sp" android:ellipsize="end" android:id="@+id/tv_listitem_ad_source" android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp" android:singleLine="true" android:layout_marginStart="10dp"/>
                </LinearLayout>
            </RelativeLayout>
            <Button android:textSize="9sp" android:id="@+id/tt_creative_btn" android:layout_width="135dp" android:layout_height="40dp" android:text="Download" android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/iv_listitem_dislike" android:visibility="invisible" android:clickable="true" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:src="@drawable/unad_dislike_icon" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</RelativeLayout>
