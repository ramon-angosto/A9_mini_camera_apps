<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:pangle="http://schemas.android.com/apk/com.bytedance.sdk.component" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/tt_full_reward_video_loading" android:background="#161823" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/wave_container" android:layout_width="match_parent" android:layout_height="60dp">
            <View android:id="@+id/wave1" android:background="@drawable/tt_ad_loading_three_left" android:layout_width="17dp" android:layout_height="35dp" android:layout_marginRight="-1.5dp"/>
            <View android:id="@+id/wave2" android:background="@drawable/tt_ad_loading_three_mid" android:layout_width="17dp" android:layout_height="35dp" android:layout_marginRight="-1.5dp"/>
            <View android:id="@+id/wave3" android:background="@drawable/tt_ad_loading_three_mid" android:layout_width="17dp" android:layout_height="35dp"/>
            <View android:id="@+id/wave4" android:background="@drawable/tt_ad_loading_three_mid" android:layout_width="17dp" android:layout_height="35dp" android:layout_marginLeft="-1.5dp"/>
            <View android:id="@+id/wave5" android:background="@drawable/tt_ad_loading_three_right" android:layout_width="17dp" android:layout_height="35dp" android:layout_marginLeft="-1.5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
            <TextView android:textSize="30dp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Loading "/>
            <TextView android:textSize="30dp" android:textColor="#ffffff" android:id="@+id/tt_loading_progress_number" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="30dp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="%"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/tt_ad_loading_logo" android:background="@drawable/tt_ad_logo_new" android:layout_width="32dp" android:layout_height="14dp" android:layout_marginLeft="20dp" android:layout_marginBottom="20dp" android:layout_alignParentBottom="true" android:layout_marginStart="20dp"/>
</RelativeLayout>
