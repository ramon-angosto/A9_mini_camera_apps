<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/alpha_80" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_s" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="40dp" android:src="@mipmap/call_icon_bell" android:scaleType="centerInside" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/ivGif" android:layout_width="wrap_content" android:layout_height="150dp" android:layout_marginTop="12dp" android:src="@drawable/anim_doorbell_notify" android:scaleType="centerInside" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="17sp" android:textColor="@color/color_white" android:id="@+id/tvDevName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="" android:layout_below="@+id/ivGif" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="17sp" android:textColor="@color/color_white" android:id="@+id/tvAlarmMsg" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="" android:layout_below="@+id/tvDevName" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/im_show" android:layout_width="300dp" android:layout_height="250dp" android:layout_marginTop="30dp" android:layout_below="@+id/tvDevName" android:layout_centerInParent="true"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="50dp" android:layout_alignParentBottom="true">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1">
            <ImageView android:id="@+id/ivOpen" android:layout_width="60dp" android:layout_height="60dp" android:src="@mipmap/call_icon_video" android:scaleType="fitCenter"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/bell_call_video"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1">
            <ImageView android:id="@+id/ivAudioOpen" android:layout_width="60dp" android:layout_height="60dp" android:src="@mipmap/call_icon_audio" android:scaleType="fitCenter"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/bell_call_audio"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:visibility="gone" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1">
            <ImageView android:id="@+id/ivMes" android:layout_width="60dp" android:layout_height="60dp" android:src="@mipmap/call_icon_meg" android:scaleType="fitCenter"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1">
            <ImageView android:id="@+id/ivClose" android:layout_width="60dp" android:layout_height="60dp" android:src="@mipmap/call_icon_no" android:scaleType="fitCenter"/>
            <TextView android:textSize="12sp" android:textColor="#ffffff" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/bell_call_cancel"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
