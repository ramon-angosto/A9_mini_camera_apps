        <TextView android:textSize="16sp" android:textColor="#54000000" android:gravity="center" android:id="@+id/tt_pangle_ad_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:layout_below="@+id/tt_pangle_ad_title" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="32sp" android:textColor="#ff000000" android:id="@+id/tt_pangle_ad_score_num" android:layout_width="44dp" android:layout_height="41dp" android:text="4.5" android:layout_above="@+id/tt_pangle_ad_score" android:layout_centerHorizontal="true"/>
        <com.bytedance.sdk.openadsdk.core.widget.TTRatingBar2 android:layout_gravity="center" android:id="@+id/tt_pangle_ad_score" android:layout_width="wrap_content" android:layout_height="16dp" android:layout_marginTop="12dp" android:layout_marginBottom="16dp" android:layout_above="@+id/tt_pangle_ad_btn" android:layout_centerHorizontal="true"/>
