<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/main" android:background="#30000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/shape_dialog_bg" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="18sp" android:textColor="#666666" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/dialog_title" android:layout_width="270dp" android:layout_height="50dp" android:text="@string/tip_reminder"/>
        <ImageView android:background="#eee" android:layout_width="match_parent" android:layout_height="1dp"/>
        <TextView android:textSize="15sp" android:textColor="#666666" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_content" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="70dp"/>
        <ImageView android:background="#eee" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="270dp" android:layout_height="40dp">
            <TextView android:textSize="14sp" android:textColor="@drawable/selector_bg_press" android:gravity="center" android:id="@+id/tv_1" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1"/>
            <ImageView android:background="#eee" android:layout_width="1dp" android:layout_height="match_parent"/>
            <TextView android:textSize="14sp" android:textColor="@drawable/selector_bg_press" android:gravity="center" android:id="@+id/tv_2" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/sure" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
