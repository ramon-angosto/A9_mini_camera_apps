    <RelativeLayout android:gravity="center_vertical" android:background="@drawable/background_listbg" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
