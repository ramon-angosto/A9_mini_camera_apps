<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <FrameLayout android:id="@+id/fl_play" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
        <android.opengl.GLSurfaceView android:id="@+id/myhsurfaceview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <SurfaceView android:id="@+id/sfv_playback" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:id="@+id/playback_img" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/color_black" android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/textTimeStamp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp"/>
        <Button android:layout_gravity="top|left|center_vertical|center_horizontal|center" android:id="@+id/date_cancel" style="@style/button_back_style"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ff0033" android:gravity="center" android:layout_gravity="top|center_vertical|center_horizontal|center" android:id="@+id/tv_taking_video" android:padding="6dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/videoing"/>
        <ImageButton android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/ptz_exit" android:background="@drawable/play_button_selector" android:layout_width="46dp" android:layout_height="40dp" android:layout_marginTop="6dp" android:layout_marginRight="10dp" android:scaleType="fitCenter"/>
        <ImageButton android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/ptz_takevideo" android:background="@drawable/play_button_selector" android:layout_width="46dp" android:layout_height="40dp" android:layout_marginTop="60dp" android:layout_marginRight="10dp" android:scaleType="fitCenter"/>
        <ImageButton android:layout_gravity="right" android:id="@+id/ptz_voice" android:background="@drawable/play_button_selector" android:layout_width="46dp" android:layout_height="40dp" android:layout_marginTop="110dp" android:layout_marginRight="10dp" android:scaleType="fitCenter"/>
        <ImageButton android:layout_gravity="right" android:id="@+id/ib_calendar" android:background="@drawable/play_button_selector" android:layout_width="46dp" android:layout_height="40dp" android:layout_marginTop="160dp" android:layout_marginRight="10dp" android:scaleType="fitCenter"/>
    </FrameLayout>
    <RelativeLayout android:gravity="center" android:orientation="vertical" android:id="@+id/rt_seek" android:background="#00ff0000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="20sp" android:textColor="@color/text_color_back1" android:id="@+id/textViewStart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/text_color_back1" android:id="@+id/textViewLen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <SeekBar android:id="@+id/playback_seekbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:thumbOffset="0dp" android:layout_below="@+id/textViewStart"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_connect_prompt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
        <ProgressBar android:id="@+id/progressBar1" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge"/>
        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/connecting"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lin_video_rule_parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true">
        <com.shix.shixipc.widget.VideoRulerView android:id="@+id/vrv_rule" android:background="#33999999" android:layout_width="match_parent" android:layout_height="60dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/lin_ruler_parent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true">
        <TextView android:textStyle="bold" android:textColor="#333" android:id="@+id/tv_y_m_day" android:background="#33333333" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
