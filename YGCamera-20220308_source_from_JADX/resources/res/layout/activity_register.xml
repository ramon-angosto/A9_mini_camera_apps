<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@mipmap/qh_allbg" android:fitsSystemWindows="true" android:clipToPadding="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/Relative_top" android:background="@color/color_H_Main" android:layout_width="match_parent" android:layout_height="50dp">
        <Button android:id="@+id/back" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/button_back_style1"/>
        <com.shix.shixipc.view.MyTextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/color_white" android:ellipsize="marquee" android:layout_gravity="center_vertical" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:maxWidth="150dp" android:text="@string/register_account" android:scrollHorizontally="true" android:singleLine="true" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" android:layout_centerInParent="true" android:marqueeRepeatLimit="marquee_forever"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="71dp" android:layout_marginTop="30dp" android:layout_marginRight="71dp">
        <LinearLayout android:orientation="vertical" android:id="@+id/llPhone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="19dp" android:layout_weight="1">
            <TextView android:textSize="15sp" android:textColor="@color/z2" android:gravity="center" android:id="@+id/tvPhoneType" android:layout_width="72dp" android:layout_height="wrap_content" android:text="@string/register_phone"/>
            <ImageView android:id="@+id/ivPhoneType" android:background="@color/color_H_Main" android:layout_width="72dp" android:layout_height="2dp" android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="right" android:orientation="vertical" android:id="@+id/llEmail" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="19dp" android:layout_weight="1">
            <TextView android:textSize="15sp" android:textColor="@color/z3" android:gravity="center" android:id="@+id/tvEmailType" android:layout_width="72dp" android:layout_height="wrap_content" android:text="@string/register_email"/>
            <ImageView android:id="@+id/ivEmailType" android:background="@color/color_H_Main" android:visibility="invisible" android:layout_width="72dp" android:layout_height="2dp" android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/selector_input" android:paddingLeft="19dp" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="42dp" android:layout_marginTop="20dp" android:layout_marginRight="43dp">
        <TextView android:textSize="14sp" android:textColor="#b3000000" android:gravity="center_vertical" android:id="@+id/tvAreaCode" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="+86"/>
        <View android:layout_gravity="center_vertical" android:id="@+id/lineAreaCode" android:background="@color/z1" android:layout_width="0.5dp" android:layout_height="20dp" android:layout_marginLeft="9.5dp" android:layout_marginRight="9.5dp" android:alpha="0.2"/>
        <EditText android:textSize="13sp" android:textColor="@color/z2" android:textColorHint="@color/z2" android:id="@+id/etAccount" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/hint_input_phone" android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/selector_input" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="42dp" android:layout_marginTop="10dp" android:layout_marginRight="43dp">
        <EditText android:textSize="13sp" android:textColor="@color/z2" android:textColorHint="@color/z2" android:id="@+id/etPwd" android:background="@null" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:hint="@string/hint_pwd" android:maxLines="1" android:layout_weight="1" android:inputType="textPassword"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/ivShowPwd" android:padding="3dp" android:layout_width="20dp" android:layout_height="match_parent" android:layout_marginRight="20dp" android:src="@mipmap/btn_eye"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/selector_input" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="42dp" android:layout_marginTop="10dp" android:layout_marginRight="43dp">
        <EditText android:textSize="13sp" android:textColor="@color/z2" android:textColorHint="@color/z2" android:id="@+id/etCode" android:background="@null" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:hint="@string/hint_validate_code" android:maxLines="1" android:layout_weight="1"/>
        <View android:layout_gravity="center_vertical" android:background="@color/z1" android:layout_width="0.5dp" android:layout_height="20dp" android:layout_marginLeft="9.5dp" android:alpha="0.2"/>
        <TextView android:textSize="13sp" android:textColor="#b3000000" android:gravity="center_vertical" android:id="@+id/tvGetCode" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="19dp" android:layout_marginRight="20dp" android:text="@string/get_validate_code" android:alpha="0.7"/>
    </LinearLayout>
    <TextView android:textSize="15sp" android:textColor="@color/color_white" android:gravity="center" android:id="@+id/tvRegister" android:background="@drawable/btn_blue_selector" android:layout_width="match_parent" android:layout_height="43dp" android:layout_marginLeft="42dp" android:layout_marginTop="15dp" android:layout_marginRight="43dp" android:text="@string/done"/>
</LinearLayout>
